<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_user_path(@user), class: 'btn' %> |
<%= link_to 'Back', users_path, class: 'btn' %>

<br />
<br />

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Address:</b>
  <%= @user.address %>
</p>

<p>
  <b>Photo:</b>
  <%= image_tag @user.photo, :width => 100 %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<% if current_user == @user %>

<br />
<br />

<b>Sent Messages:</b>
<table class="table table-hover">
  <tr>
    <th>To:</th>
    <th>Message:</th>
  </tr>

  <% @user.sent_messages.each do |sent_message| %>
  <tr>
    <td><%= sent_message.receiver.name %></td>
    <td><%= sent_message.whats_written %></td>
    <td><%= link_to "Reply", new_message_url, class: 'btn' %></td>
  </tr>
  <% end %>
</table>

<br />
<br />

<b>Received Messages:</b>
<table class="table table-hover">
  <tr>
    <th>From:</th>
    <th>Message</th>
  </tr>

  <% @user.received_messages.each do |received_message| %>
    <tr>
      <td><%= received_message.sender.name %></td>
      <td><%= received_message.whats_written %></td>
      <td><%= link_to "Reply", new_message_url, class: 'btn' %></td>
    </tr>
  <% end %>
</table>


<% end %>

